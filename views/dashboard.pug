extends layout.pug
    
block content
    h1 Welcome #{user.display_name}!
    img(src=user.images[0].url, class="circular_image")

    h3 The last 10 songs you have played:

    table 
      each t in tracks 
        tr 
          - var artist_name = t.track.artists[0].name 
          - var song_name = t.track.name 
          - var preview_url = t.track.preview_url

          td #{artist_name}
          td #{song_name}
          td: a(href=preview_url) Preview

    form(method="get" action="/user-input-page")
      input(type="submit", value="Click HERE for customized recommendation feature")